@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Text sender</title>
    <link href="lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="lib/bootstrap/dist/css/bootstrap-grid.min.css" rel="stylesheet"/>
    <link href="lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<div class="container-fluid">
    <form name="form1" method="post" enctype="multipart/form-data" action="api/values">
        <div class="form-group row">
            <div class="col-sm-2">
                <label>Высота картинки:</label>
                <input type="number" class="form-control form-control-sm" name="Height" required/>
            </div>
            <div class="col-sm-2">
                <label for="Width">Ширина картинки:</label>
                <input type="number" id ="Width" name="Width" required class="form-control form-control-sm"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <label>Минимальный размер шрифта:</label><br />
                <input type="number" name="MinFont" class="form-control form-control-sm" required/>
            </div>
            <div class="col-sm-2">
                <label>Максимальный размер шрифта:</label><br/>
                <input type="number" class="form-control form-control-sm" name="MaxFont" required/>        
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                <label for="File">Файл</label><br/>
                <input class="form-control-file" name="File" id="File" type="file" required/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                <label for="FontName">Выберите шрифт</label>
                <select for="FontName" id ="FontName" class="form-control" name="FontName">
                    <option value="Arial">Arial</option>
                    <option value="Serif">Serif</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="Colors" value="Red">Красный
                </label>
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="Colors" value="Green">Зеленый
                </label>
                <br/>
            </div>
            <div class="col-sm-4">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="Colors" value="Black">Черный
                    </label>
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="Colors" value="Violet">Фиолетовый
                    </label>
                <br/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">           
                <input type="submit" class="btn" value="Отправить"/>
            </div>
        </div>
    </form>
</div>
</body>
</html>
